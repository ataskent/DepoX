<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DepoX.Views.TransferPage"
             Title="Depolar Arası Transfer">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Ürün Barkodu -->
            <!--<Frame BorderColor="#B0B0B0" CornerRadius="5" Padding="5">-->
                <VerticalStackLayout Spacing="2">
                    <Label Text="Ürün Barkodu" FontSize="12" TextColor="Gray"/>
                    <Entry x:Name="ProductEntry" Placeholder="Barkod okut veya yaz"
                           BackgroundColor="Transparent" TextColor="Black"/>
                </VerticalStackLayout>
            <!--</Frame>

            --><!-- Kaynak Depo --><!--
            <Frame BorderColor="#B0B0B0" CornerRadius="5" Padding="5">-->
                <VerticalStackLayout Spacing="2">
                    <Label Text="Kaynak Depo" FontSize="12" TextColor="Gray"/>
                    <Entry x:Name="FromWhouseEntry" Placeholder="Örn: DEPO01"
                           BackgroundColor="Transparent" TextColor="Black"/>
                </VerticalStackLayout>
            <!--</Frame>

            --><!-- Hedef Depo --><!--
            <Frame BorderColor="#B0B0B0" CornerRadius="5" Padding="5">-->
                <VerticalStackLayout Spacing="2">
                    <Label Text="Hedef Depo" FontSize="12" TextColor="Gray"/>
                    <Entry x:Name="ToWhouseEntry" Placeholder="Örn: DEPO02"
                           BackgroundColor="Transparent" TextColor="Black"/>
                </VerticalStackLayout>
            <!--</Frame>

            --><!-- Miktar --><!--
            <Frame BorderColor="#B0B0B0" CornerRadius="5" Padding="5">-->
                <VerticalStackLayout Spacing="2">
                    <Label Text="Miktar" FontSize="12" TextColor="Gray"/>
                    <Entry x:Name="QuantityEntry" Keyboard="Numeric" Placeholder="Adet gir"
                           BackgroundColor="Transparent" TextColor="Black"/>
                </VerticalStackLayout>
            <!--</Frame>-->

            <!-- Butonlar -->
            <Button Text="Transferi Kaydet (Offline)" Clicked="OnSaveClicked"
                    BackgroundColor="#4A6FA5" TextColor="White" CornerRadius="5"/>
            <Button Text="Servise Gönder" Clicked="OnSyncClicked"
                    BackgroundColor="#2E8B57" TextColor="White" CornerRadius="5"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>